<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#018212"
    tools:context="com.example.srecko.agrohelper.AnimationActivity">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/hayFImg"
        android:layout_gravity="right"
        android:layout_marginTop="150dp"
        />
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/farmerImg"

        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="178dp"
        android:id="@+id/carrotImg"
        android:layout_marginTop="600px"
        android:layout_gravity="right"
        />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="178dp"
        android:id="@+id/cornImg"
        android:layout_marginTop="600px"
        android:layout_gravity="left"
        />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/tomatoImg"
        android:layout_marginLeft="450px"
        android:layout_gravity="bottom"
        />
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/potatoImg"
        android:layout_marginLeft="500px"
        />
    <ImageView
        android:layout_width="512dp"
        android:layout_height="512dp"
        android:id="@+id/basketImg"
        android:layout_marginTop="600px"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt"
        android:layout_gravity="center"
        android:fontFamily="monospace"
        android:textSize="60dp"
        android:text="AgroHelper"
        android:transformPivotX="50pt"/>
</FrameLayout>
